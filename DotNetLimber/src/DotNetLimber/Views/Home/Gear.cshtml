@{
    ViewData["Title"] = "Gear";
}
<header class="obama">
    <h1 class="h1">@ViewData["Title"]</h1>
</header>
<h3 class="h3">@ViewData["Message"]</h3>

<div>
    <p>If you are interested in campaign gear, we have multiple options for you, including a <a href="http://www.cafepress.com/limberbutt2016?awc=4102_1442855222_78acd63d6ed3f2db4a8be6c010476115&utm_medium=affiliate&utm_source=aw&utm_term=78888&utm_content=0#">Cafe Press store</a>.</p>
</div>

<div class="container gallery" id="gallery">
    <div class="row">
        <div class="col-sm-12 col-md-6 centerMe">
            <img src="~/images/tshirt.jpg" alt="T-shirt" data-toggle="modal" data-target="#myModal"/>
        </div>
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title centerMe" id="myModalLabel">T-Shirt</h4>
                    </div>
                    <div class="modal-body">
                        <img src="~/images/tshirt.jpg" alt="T-shirt" class="centerMe"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 centerMe">
            <img src="~/images/cofeemug.jpg" alt="Coffee Mug" data-toggle="modal" data-target="#myModal1" />
        </div>
        <div class="modal fade" id="myModal1" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title centerMe" id="myModalLabel">Coffee Mug</h4>
                    </div>
                    <div class="modal-body">
                        <img src="~/images/cofeemug.jpg" alt="Coffee Mug" class="centerMe"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-12 col-md-6 centerMe">
            <img src="~/images/yardsign.png" alt="Yard Sign" data-toggle="modal" data-target="#myModal2" />
        </div>
        <div class="modal fade" id="myModal2" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title centerMe" id="myModalLabel">Yard Sign</h4>
                    </div>
                    <div class="modal-body">
                        <img src="~/images/yardsign.png" alt="Yard Sign" class="centerMe" />
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-12 col-md-6 centerMe">
            <img src="~/images/wipertag.jpg" alt="Wiper Tag" data-toggle="modal" data-target="#myModal3" />
        </div>
        <div class="modal fade" id="myModal3" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title centerMe" id="myModalLabel">Wiper Tag</h4>
                    </div>
                    <div class="modal-body">
                        <img src="~/images/wipertag.jpg" alt="Wiper Tag" class="centerMe" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="overlay">

</div>

@section scripts {
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/js/site.js"></script>

}



